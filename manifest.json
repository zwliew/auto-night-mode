{
  "name": "YouTube Auto Dark Mode",
  "short_name": "YT Auto Dark",
  "description": "Automatically turn on YouTube's dark mode at night.",
  "manifest_version": 2,
  "version": "1.0.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "cookies",
    "alarms",
    "*://*.youtube.com/*"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
