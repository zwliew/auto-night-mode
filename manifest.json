{
  "name": "YouTube Auto Dark Mode",
  "short_name": "YT Auto Dark",
  "description": "Automatically turn on YouTube's dark mode at night.",
  "manifest_version": 2,
  "version": "1.0.0",
  "background": {
    "page": "src/background.html",
    "persistent": false
  },
  "permissions": [
    "cookies",
    "alarms",
    "*://*.youtube.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "src/popup.html"
  }
}
